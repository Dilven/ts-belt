{
  "name": "@mobily/ts-belt",
  "description": "ðŸ”§ TS Belt is a library for functional programming in TypeScript. It implements Result and Option monads and other various helpers. Based on Belt and Relude (ReScript/Reason).",
  "version": "2.0.0-rc.16",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/src",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/src"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "*.md",
    "package.json"
  ],
  "scripts": {
    "build": "bash ./scripts/build.sh",
    "esbuild": "node esbuild.config.js",
    "clean": "rm -rf ./dist && rm -f ./tsconfig.tsbuildinfo",
    "test": "yarn jest --coverage",
    "test:watch": "yarn jest --watch",
    "re:clean": "yarn bsb -clean-world",
    "re:build": "yarn bsb -make-world",
    "re:dev": "yarn bsb -make-world -w",
    "generate:flow": "node ./scripts/generate-flow-files.js",
    "generate:contributors": "yarn all-contributors generate"
  },
  "engines": {
    "node": ">= 10.*"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "typescript",
    "functional-programming",
    "fp",
    "monad",
    "option",
    "option-type",
    "result",
    "result-type",
    "array"
  ],
  "author": "Marcin Dziewulski <hello@mobily.pl>",
  "homepage": "https://github.com/mobily/ts-belt#readme",
  "bugs": "https://github.com/mobily/ts-belt/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mobily/ts-belt.git"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "all-contributors-cli": "^6.20.0",
    "bs-platform": "^9.0.2",
    "coveralls": "^3.1.0",
    "esbuild": "^0.11.18",
    "flow-bin": "^0.150.0",
    "flowgen": "^1.14.1",
    "gentype": "^3.48.0",
    "globby": "^11.0.3",
    "jest": "^26.6.3",
    "jscodeshift": "^0.12.0",
    "minimatch": "^3.0.4",
    "prettier": "^2.2.0",
    "ts-jest": "^26.5.5",
    "tsd": "^0.14.0",
    "typescript": "^4.2.4",
    "wonka": "^4.0.15"
  },
  "cacheDirectories": [
    "node_modules"
  ]
}
