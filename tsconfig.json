{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist/types/src",
    "lib": ["esnext"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "sourceMap": false,
    "pretty": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./codemods/**/*",
    "./src/**/*.gen.tsx",
    "./__tests__/**/*"
  ]
}
